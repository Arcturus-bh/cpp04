NAME = Brain

SRC = main.cpp \
	  Animal.cpp \
	  WrongAnimal.cpp \
	  Dog.cpp \
	  Cat.cpp \
	  WrongCat.cpp \
	  Brain.cpp \

OBJ = $(SRC:.cpp=.o)

CC = c++
FLAGS =  -Wall -Wextra -Werror -std=c++98 -fsanitize=address

%.o: %.cpp
	$(CC) $(FLAGS) -c $< -o $@

$(NAME): $(OBJ)
	@${CC} $(FLAGS) $(OBJ) -o $(NAME)

all: $(NAME)

clean:
	@rm -f $(OBJ)
	@echo "Suppression des .o" 

fclean: clean
	@rm -f $(OBJ) $(NAME)
	@echo "Suppression du .a effectuÃ©e"

re: fclean all

.PHONY : all clean fclean re